<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ua.dashan.rebus.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Допущено ошибок: "
        android:layout_gravity="center"
        android:id="@+id/textView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Замените буквы на цифры, чтобы добиться равенства:
ВАГОН + ВАГОН = СОСТАВ"
        android:id="@+id/info" />
    <LinearLayout
        android:id="@+id/editText1_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:id="@+id/letterV"
        android:hint="@string/в"
        android:layout_weight="1"
        android:textSize="30sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:hint="@string/а"
        android:id="@+id/letterA"
        android:layout_weight="1"
        android:textSize="30sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:hint="@string/г"
        android:id="@+id/letterG"
        android:layout_weight="1"
        android:textSize="30sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:hint="@string/о"
        android:id="@+id/letterO"
        android:layout_weight="1"
        android:textSize="30sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:hint="@string/н"
        android:id="@+id/letterN"
        android:layout_weight="1"
        android:textSize="30sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+"
        android:layout_gravity="center"
        android:textSize="45sp"
        android:id="@+id/textView"

        />

    <LinearLayout
        android:id="@+id/editText2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:focusable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:maxLength="1"
            android:gravity="center"
            android:id="@+id/letterV2"
            android:hint="@string/в"
            android:layout_weight="1"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:focusable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:maxLength="1"
            android:gravity="center"
            android:hint="@string/а"
            android:id="@+id/letterA2"
            android:layout_weight="1"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:focusable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:gravity="center"
            android:hint="@string/г"
            android:id="@+id/letterG2"
            android:layout_weight="1"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:focusable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:gravity="center"
            android:hint="@string/о"
            android:id="@+id/letterO2"
            android:layout_weight="1"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:focusable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:gravity="center"
            android:hint="@string/н"
            android:id="@+id/letterN2"
            android:layout_weight="1"
            android:textSize="30sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="="
        android:layout_gravity="center"
        android:textSize="45sp"
        android:id="@+id/textView2"

        />
    <LinearLayout
        android:id="@+id/sostav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:focusable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:gravity="center"
            android:id="@+id/S"
            android:hint="с"
            android:layout_weight="1"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:focusable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:gravity="center"
            android:hint="о"
            android:id="@+id/O"
            android:layout_weight="1"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:focusable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:gravity="center"
            android:hint="с"
            android:id="@+id/S2"
            android:layout_weight="1"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:focusable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:hint="т"
            android:id="@+id/T"
            android:layout_weight="1"
            android:textSize="30sp"/>
        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
            android:focusable="false"
            android:longClickable="false"
            android:cursorVisible="false"
        android:hint="а"
        android:id="@+id/A"
        android:layout_weight="1"
        android:textSize="30sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:hint="в"
            android:focusable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:id="@+id/V"
            android:layout_weight="1"
            android:textSize="30sp"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:layout_gravity="center"
        android:id="@+id/congrat" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Проверить"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/button" />


</LinearLayout>
